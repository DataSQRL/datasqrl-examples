{
  "version": "1",
  "enabled-engines": ["flink", "iceberg"],
  "script": {
    "main": "kafka-to-iceberg.sqrl"
  },
  "values": {
    "LOCAL_WAREHOUSE_DIR": "/data/iceberg",
    "flink-config": {
      "execution.checkpointing.interval": "1 min",
      "table.exec.source.idle-timeout": "60 s"
    }
  },
  "engines": {
    "flink": {
      "connectors": {
        "iceberg": {
          "warehouse": "${LOCAL_WAREHOUSE_DIR}",
          "catalog-type": "hadoop",
          "catalog-name": "mycatalog"
        }
      }
    }
  },
  "dependencies": [
    {
      "kafka-source": {
        "name": "kafka-source",
        "version": "1",
        "variant": "dev"
      }
    },
    {
      "iceberg-sink": {
        "name": "iceberg-sink",
        "version": "1",
        "variant": "dev"
      }
    }
  ]
}
