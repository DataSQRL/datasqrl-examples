{
  "version": "1",
  "enabled-engines": ["vertx", "postgres", "kafka", "flink"],
  "script": {
    "main": "creditcard-rewards.sqrl",
    "graphql": "creditcard-rewards.graphqls"
  },
  "values" : {
    "create-topics": ["transaction", "cardassignment","merchant","merchantreward","customerreward"]
  },
  "engines": {
    "flink" : {
      "config" : {
        "table.exec.source.idle-timeout": "10 s",
        "table.optimizer.agg-phase-strategy": "ONE_PHASE"
      }
    }
  },
  "dependencies": [{
    "creditcard-data": {
      "name": "creditcard-kafka",
      "version": "1",
      "variant": "dev"
    },
    "creditcard-sink": {
      "name": "creditcard-kafka",
      "version": "1",
      "variant": "dev"
    }
  }]
}